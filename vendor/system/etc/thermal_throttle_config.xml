  <ZoneThrottleInfo>
    <ZoneID>3</ZoneID>
    <CriticalShutDown>0</CriticalShutDown>
    <CoolingDeviceInfo>
      <CoolingDevId>1</CoolingDevId>
    </CoolingDeviceInfo>
  </ZoneThrottleInfo>
-->

  <ZoneThrottleInfo>
    <ZoneID>3</ZoneID>
    <CriticalShutDown>1</CriticalShutDown>
    <CoolingDeviceInfo>
      <CoolingDevId>1</CoolingDevId>
    </CoolingDeviceInfo>
  </ZoneThrottleInfo>


</Profile>
</thermalthrottleconfig>
